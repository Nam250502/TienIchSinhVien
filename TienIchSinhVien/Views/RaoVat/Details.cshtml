@model TienIchSinhVien.Models.Detailraovatviewmodel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Product Detail Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="col-lg-12">
        <div class="row">

            <div class="col-lg-8 d-flex align-items-center flex-column">

                <img src="@Model.RaoVat.AnhMinhHoa" class="d-block mx-auto" style="width: 70%;">
                <h3>@Model.RaoVat.TieuDe</h3>

                <div class="container">
                    <table class="table">
                        <thead>
                            @*<tr>
                                <td></td>
                                <td></td>
                                <td><img src="https://static.chotot.com/storage/icons/logos/ad-param/ad_type.png" width="20px" height="20px" /> : Bán</td>
                                <td><img src="https://static.chotot.com/storage/icons/logos/ad-param/size.png" height="20px" width="20px" />Diện Tích : @Model.RaoVat.LoaiHang</td>

                            </tr>*@
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-alarm" viewBox="0 0 16 16">
                                        <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z" />
                                        <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z" />
                                    </svg>  Ngày Đăng: @Model.RaoVat.NgayDang
                                </td>
                                <td>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cash-coin" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z" />
                                        <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z" />
                                        <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z" />
                                        <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z" />
                                    </svg> Giá : @Model.RaoVat.Gia
                                </td>

                            </tr>
                        </thead>
                    </table>
                </div>
                <h3>Mô tả chi tiết</h3>
                <p>@Model.RaoVat.MoTa</p>

                @*<p> Diện Tích: @Model.PhongTro.DienTich</p>*@


                <button class="btn btn-outline-success" onclick="copyToClipboard()">Sao Chép Số Điện Thoại</button>
            </div>
            <div class="col-lg-4">
                <div class="container d-flex justify-content-center">
                    <div class="card p-3 py-4">
                        <div class="text-center">
                            <img src="@Model.Anh" width="100" class="rounded-circle">
                            <h3 class="mt-2">@Model.Name</h3>
                            @using (Html.BeginForm("DanhGia", "Profile", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="mt-2">
                                    <input type="text" id="DanhGia" name="DanhGia" class="r-lg-4" placeholder="Viết Đánh Giá Của Bạn" />

                                    <input type="text" id="UserId2" name="UserId2" value="@Model.UserId" style="display:none" />

                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-info r-lg-2">Gửi Đánh Giá</button>
                                    </div>
                                </div>

                            }


                            @using (Html.BeginForm("detaiprofile", "Profile", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input name="id" value="@Model.UserId" style="display:none" />

                                <div class="profile mt-5">

                                    <button type="submit" class="profile_button px-5">Xem Đánh giá</button>

                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div>




                </div>
            </div>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>    <a href="@Url.Action("Index","PhongTro")">Quay Lại</a>
            </div>


            <script>
   function copyToClipboard() {
         var phoneNumber = "@Html.DisplayFor(model => model.RaoVat.PhoneNumber)";
         var productData = phoneNumber;

             navigator.clipboard.writeText(productData).then(function() {
                 console.log("Copied phone number to clipboard: " + phoneNumber);
                 alert("Đã sao chép: " + productData);
                     }, function() {
                 console.error("Unable to copy phone number to clipboard.");
                 alert("Sao chép không thành công. Vui lòng thử lại.");
                     });
            }

            </script>
</body>
</html>
