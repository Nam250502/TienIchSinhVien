@model TienIchSinhVien.Models.PhongTro

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm("Create", "PhongTro", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal d-flex align-items-center justify-content-center">
        <div class="bg-white shadow rounded overflow-hidden">
            <h4>Đăng Cho Thuê Phòng Trọ</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    <img id="img-preview" src="~/Content/Images/hinh-nen-xam_8.jpg" alt="Ảnh xem trước" style=" height:275px " />
                </div>
            </div>
            <div class="col-md-10">
                <label for="anh">Ảnh minh họa</label>
            </div>

            <div class="form-group">
                <div class="col-md-10">

                    <input type="file" name="anh" id="anh" onchange="loadFile(event)" />
                    <br />

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", placeholder = "Tiêu Đề" } })
                    @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Giá Phòng" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa Chỉ Phòng" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienTich, new { htmlAttributes = new { @class = "form-control", placeholder = "DIện Tích Phòng" } })
                    @Html.ValidationMessageFor(model => model.DienTich, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", placeholder = "Mô Tả" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Đăng Bài" class="btn btn-outline-success" />
                </div>
            </div>
        </div>


    </div>
}
<script>
    var loadFile = function (event) {
        var output = document.getElementById('img-preview');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
